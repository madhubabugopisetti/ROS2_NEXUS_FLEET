<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro name="car_robot" params="prefix">

        <link name="${prefix}base_link">
            <visual>
                <origin xyz="0 0 0.1" />
                <geometry>
                    <box size="0.3 0.2 0.1" />
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0.1" />
                <geometry>
                    <box size="0.3 0.2 0.1" />
                </geometry>
            </collision>
            <inertial>
                <mass value="5" />
                <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0" />
            </inertial>
        </link>

        <joint name="${prefix}left_wheel_joint" type="continuous">
            <parent link="${prefix}base_link" />
            <child link="${prefix}left_wheel" />
            <origin xyz="0 0.1 0.05" />
            <axis xyz="0 1 0" />
            <limit effort="10" velocity="20" />
        </joint>

        <link name="${prefix}left_wheel">
            <visual>
                <origin rpy="1.5708 0 0" />
                <geometry>
                    <cylinder radius="0.05" length="0.02" />
                </geometry>
            </visual>
            <collision>
                <origin rpy="1.5708 0 0" />
                <geometry>
                    <cylinder radius="0.05" length="0.02" />
                </geometry>
            </collision>
            <inertial>
                <mass value="0.5" />
                <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0" />
            </inertial>
        </link>

        <joint name="${prefix}right_wheel_joint" type="continuous">
            <parent link="${prefix}base_link" />
            <child link="${prefix}right_wheel" />
            <origin xyz="0 -0.1 0.05" />
            <axis xyz="0 1 0" />
            <limit effort="10" velocity="20" />
        </joint>

        <link name="${prefix}right_wheel">
            <visual>
                <origin rpy="1.5708 0 0" />
                <geometry>
                    <cylinder radius="0.05" length="0.02" />
                </geometry>
            </visual>
            <collision>
                <origin rpy="1.5708 0 0" />
                <geometry>
                    <cylinder radius="0.05" length="0.02" />
                </geometry>
            </collision>
            <inertial>
                <mass value="0.5" />
                <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0" />
            </inertial>
        </link>
        <!-- Front Caster -->
        <link name="${prefix}caster_wheel_front">
            <visual>
                <geometry>
                    <sphere radius="0.03" />
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <sphere radius="0.03" />
                </geometry>
            </collision>
            <inertial>
                <mass value="0.2" />
                <inertia ixx="0.0001" iyy="0.0001" izz="0.0001"
                    ixy="0" ixz="0" iyz="0" />
            </inertial>
        </link>

        <joint name="${prefix}caster_front_joint" type="fixed">
            <parent link="${prefix}base_link" />
            <child link="${prefix}caster_wheel_front" />
            <origin xyz="0.12 0 0.03" rpy="0 0 0" />
        </joint>
        <!-- Back Caster -->
        <link name="${prefix}caster_wheel_back">
            <visual>
                <geometry>
                    <sphere radius="0.03" />
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <sphere radius="0.03" />
                </geometry>
            </collision>
            <inertial>
                <mass value="0.2" />
                <inertia ixx="0.0001" iyy="0.0001" izz="0.0001"
                    ixy="0" ixz="0" iyz="0" />
            </inertial>
        </link>

        <joint name="${prefix}caster_back_joint" type="fixed">
            <parent link="${prefix}base_link" />
            <child link="${prefix}caster_wheel_back" />
            <origin xyz="-0.12 0 0.03" rpy="0 0 0" />
        </joint>
        <!-- LiDAR -->
        <link name="${prefix}lidar_link">
            <visual>
                <origin xyz="0 0 0.025" />
                <geometry>
                    <cylinder radius="0.04" length="0.05" />
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0.025" />
                <geometry>
                    <cylinder radius="0.04" length="0.05" />
                </geometry>
            </collision>
            <inertial>
                <mass value="0.3" />
                <inertia ixx="0.0005" iyy="0.0005" izz="0.0005"
                    ixy="0" ixz="0" iyz="0" />
            </inertial>
        </link>

        <joint name="${prefix}lidar_joint" type="fixed">
            <parent link="${prefix}base_link" />
            <child link="${prefix}lidar_link" />
            <origin xyz="0 0 0.15" rpy="0 0 0" />
        </joint>
        <!-- Camera -->
        <link name="${prefix}camera_link">
            <visual>
                <geometry>
                    <box size="0.04 0.04 0.04" />
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <box size="0.04 0.04 0.04" />
                </geometry>
            </collision>
            <inertial>
                <mass value="0.1" />
                <inertia ixx="0.0001" iyy="0.0001" izz="0.0001"
                    ixy="0" ixz="0" iyz="0" />
            </inertial>
        </link>

        <joint name="${prefix}camera_joint" type="fixed">
            <parent link="${prefix}base_link" />
            <child link="${prefix}camera_link" />
            <origin xyz="0.15 0 0.15" rpy="0 0 0" />
        </joint>

    </xacro:macro>
</robot>