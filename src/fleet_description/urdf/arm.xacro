<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro name="arm_robot" params="prefix parent_link">

        <!-- SHOULDER -->
        <joint name="${prefix}shoulder_joint" type="revolute">
            <parent link="${parent_link}" />
            <child link="${prefix}shoulder_link" />
            <origin xyz="-0.1 0 0.15" />
            <axis xyz="0 0 1" />
            <limit lower="-3.14" upper="3.14" effort="300" velocity="1" />
            <dynamics damping="0.5" friction="0.1" />
        </joint>

        <link name="${prefix}shoulder_link">
            <visual>
                <origin xyz="0 0 0.2" />
                <geometry>
                    <cylinder length="0.4" radius="0.04" />
                </geometry>
                <material name="orange">
                    <color rgba="1.0 0.5 0.0 1.0" />
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0.2" />
                <geometry>
                    <cylinder length="0.4" radius="0.04" />
                </geometry>
            </collision>
            <inertial>
                <mass value="1.2" />
                <inertia ixx="0.03" iyy="0.03" izz="0.005"
                    ixy="0" ixz="0" iyz="0" />
            </inertial>
            <gazebo>
                <selfCollide>false</selfCollide>
            </gazebo>
        </link>

        <!-- ELBOW -->
        <joint name="${prefix}elbow_joint" type="revolute">
            <parent link="${prefix}shoulder_link" />
            <child link="${prefix}elbow_link" />
            <origin xyz="0 0 0.4" />
            <axis xyz="1 0 0" />
            <limit lower="-1.57" upper="1.57" effort="300" velocity="1" />
            <dynamics damping="0.5" friction="0.1" />
        </joint>

        <link name="${prefix}elbow_link">
            <visual>
                <origin xyz="0 0 0.2" />
                <geometry>
                    <cylinder length="0.4" radius="0.035" />
                </geometry>
                <material name="green">
                    <color rgba="0.0 0.8 0.0 1.0" />
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0.2" />
                <geometry>
                    <cylinder length="0.4" radius="0.035" />
                </geometry>
            </collision>
            <inertial>
                <mass value="0.9" />
                <inertia ixx="0.02" iyy="0.02" izz="0.004"
                    ixy="0" ixz="0" iyz="0" />
            </inertial>
            <gazebo>
                <selfCollide>false</selfCollide>
            </gazebo>
        </link>

        <!-- FOREARM -->
        <joint name="${prefix}forearm_joint" type="revolute">
            <parent link="${prefix}elbow_link" />
            <child link="${prefix}forearm_link" />
            <origin xyz="0 0 0.4" />
            <axis xyz="1 0 0" />
            <limit lower="-1.57" upper="1.57" effort="300" velocity="1" />
            <dynamics damping="0.5" friction="0.1" />
        </joint>

        <link name="${prefix}forearm_link">
            <visual>
                <origin xyz="0 0 0.15" />
                <geometry>
                    <cylinder length="0.3" radius="0.03" />
                </geometry>
                <material name="dark_grey">
                    <color rgba="0.3 0.3 0.3 1.0" />
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0.15" />
                <geometry>
                    <cylinder length="0.3" radius="0.03" />
                </geometry>
            </collision>
            <inertial>
                <mass value="0.6" />
                <inertia ixx="0.01" iyy="0.01" izz="0.003"
                    ixy="0" ixz="0" iyz="0" />
            </inertial>
            <gazebo>
                <selfCollide>false</selfCollide>
            </gazebo>
        </link>

        <!-- WRIST PITCH -->
        <joint name="${prefix}wrist_pitch_joint" type="revolute">
            <parent link="${prefix}forearm_link" />
            <child link="${prefix}wrist_pitch_link" />
            <origin xyz="0 0 0.3" />
            <axis xyz="1 0 0" />
            <limit lower="-1.57" upper="1.57" effort="100" velocity="1" />
            <dynamics damping="0.3" friction="0.05" />
        </joint>

        <link name="${prefix}wrist_pitch_link">
            <visual>
                <origin xyz="0 0 0.04" />
                <geometry>
                    <cylinder length="0.08" radius="0.025" />
                </geometry>
                <material name="cyan">
                    <color rgba="0.0 0.8 0.8 1.0" />
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0.04" />
                <geometry>
                    <cylinder length="0.08" radius="0.025" />
                </geometry>
            </collision>
            <inertial>
                <mass value="0.3" />
                <inertia ixx="0.003" iyy="0.003" izz="0.001"
                    ixy="0" ixz="0" iyz="0" />
            </inertial>
            <gazebo>
                <selfCollide>false</selfCollide>
            </gazebo>
        </link>

        <!-- WRIST ROLL -->
        <joint name="${prefix}wrist_roll_joint" type="revolute">
            <parent link="${prefix}wrist_pitch_link" />
            <child link="${prefix}wrist_roll_link" />
            <origin xyz="0 0 0.08" />
            <axis xyz="0 0 1" />
            <limit lower="-3.14" upper="3.14" effort="50" velocity="2" />
            <dynamics damping="0.3" friction="0.05" />
        </joint>

        <link name="${prefix}wrist_roll_link">
            <visual>
                <origin xyz="0 0 0.03" />
                <geometry>
                    <cylinder length="0.06" radius="0.022" />
                </geometry>
                <material name="grey">
                    <color rgba="0.6 0.6 0.6 1.0" />
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0.03" />
                <geometry>
                    <cylinder length="0.06" radius="0.022" />
                </geometry>
            </collision>
            <inertial>
                <mass value="0.25" />
                <inertia ixx="0.002" iyy="0.002" izz="0.001"
                    ixy="0" ixz="0" iyz="0" />
            </inertial>
            <gazebo>
                <selfCollide>false</selfCollide>
            </gazebo>
        </link>
        <!-- ================= GRIPPER ================= -->

        <!-- WRIST ROLL to GRIPPER BASE -->
        <joint name="${prefix}gripper_mount_joint" type="fixed">
            <parent link="${prefix}wrist_roll_link" />
            <child link="${prefix}gripper_base" />
            <origin xyz="0 0 0.06" />
        </joint>

        <link name="${prefix}gripper_base">
            <visual>
                <origin xyz="0 0 0.05" />
                <geometry>
                    <box size="0.08 0.08 0.1" />
                </geometry>
                <material name="blue">
                    <color rgba="0.0 0.0 1.0 1.0" />
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0.05" />
                <geometry>
                    <box size="0.08 0.08 0.1" />
                </geometry>
            </collision>
            <inertial>
                <origin xyz="0 0 0.05" />
                <mass value="0.4" />
                <inertia ixx="0.002" iyy="0.002" izz="0.002" ixy="0" ixz="0" iyz="0" />
            </inertial>
        </link>

        <!-- GRIPPER CAMERA -->
        <joint name="${prefix}gripper_camera_joint" type="fixed">
            <parent link="${prefix}gripper_base" />
            <child link="${prefix}gripper_camera_link" />
            <origin xyz="0 0 0.08" rpy="0 -1.57 0" />
        </joint>

        <link name="${prefix}gripper_camera_link">
            <visual>
                <geometry>
                    <box size="0.04 0.04 0.04" />
                </geometry>
            </visual>
        </link>

        <!-- LEFT FINGER -->
        <joint name="${prefix}left_finger_joint" type="prismatic">
            <parent link="${prefix}gripper_base" />
            <child link="${prefix}left_finger" />
            <origin xyz="0 0.012 0.05" />
            <axis xyz="0 1 0" />
            <limit lower="0" upper="0.025" effort="100" velocity="0.2" />
        </joint>

        <link name="${prefix}left_finger">
            <visual>
                <origin xyz="0 0 0.05" />
                <geometry>
                    <box size="0.015 0.015 0.1" />
                </geometry>
                <material name="blue">
                    <color rgba="0.0 0.0 1.0 1.0" />
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0.05" />
                <geometry>
                    <box size="0.015 0.015 0.1" />
                </geometry>
            </collision>
            <inertial>
                <origin xyz="0 0 0.05" />
                <mass value="0.05" />
                <inertia ixx="0.0002" iyy="0.0002" izz="0.0002" ixy="0" ixz="0" iyz="0" />
            </inertial>
        </link>

        <!-- RIGHT FINGER -->
        <joint name="${prefix}right_finger_joint" type="prismatic">
            <parent link="${prefix}gripper_base" />
            <child link="${prefix}right_finger" />
            <origin xyz="0 -0.012 0.05" />
            <axis xyz="0 -1 0" />
            <limit lower="0" upper="0.025" effort="100" velocity="0.2" />
        </joint>

        <link name="${prefix}right_finger">
            <visual>
                <origin xyz="0 0 0.05" />
                <geometry>
                    <box size="0.015 0.015 0.1" />
                </geometry>
                <material name="blue">
                    <color rgba="0.0 0.0 1.0 1.0" />
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0.05" />
                <geometry>
                    <box size="0.015 0.015 0.1" />
                </geometry>
            </collision>
            <inertial>
                <origin xyz="0 0 0.05" />
                <mass value="0.05" />
                <inertia ixx="0.0002" iyy="0.0002" izz="0.0002" ixy="0" ixz="0" iyz="0" />
            </inertial>
        </link>
    </xacro:macro>
</robot>