<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro name="car_robot" params="prefix">

        <!-- BASE -->
        <link name="${prefix}base_link">
            <visual>
                <origin xyz="0 0 0.1" />
                <geometry>
                    <box size="0.3 0.2 0.1" />
                </geometry>
                <material name="red">
                    <color rgba="1 1 0 1" />
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0.1" />
                <geometry>
                    <box size="0.3 0.2 0.1" />
                </geometry>
            </collision>
            <inertial>
                <mass value="30.0" />
                <inertia
                    ixx="0.18"
                    iyy="0.25"
                    izz="0.30"
                    ixy="0"
                    ixz="0"
                    iyz="0" />
            </inertial>
            <gazebo>
                <mu1>2.0</mu1>
                <mu2>2.0</mu2>
                <kp>1000000.0</kp>
                <kd>1.0</kd>
            </gazebo>
            <gazebo>
                <gravity>false</gravity>
            </gazebo>
        </link>

        <!-- ================= WHEEL MACRO ================= -->
        <xacro:macro name="wheel" params="name x y">
            <joint name="${prefix}${name}_joint" type="continuous">
                <parent link="${prefix}base_link" />
                <child link="${prefix}${name}" />
                <origin xyz="${x} ${y} 0.05" />
                <axis xyz="0 1 0" />
            </joint>

            <link name="${prefix}${name}">
                <visual>
                    <origin rpy="1.5708 0 0" />
                    <geometry>
                        <cylinder radius="0.05" length="0.02" />
                    </geometry>
                </visual>
                <collision>
                    <origin rpy="1.5708 0 0" />
                    <geometry>
                        <cylinder radius="0.05" length="0.02" />
                    </geometry>
                </collision>
                <inertial>
                    <mass value="0.5" />
                    <inertia ixx="0.001" iyy="0.001" izz="0.001"
                        ixy="0" ixz="0" iyz="0" />
                </inertial>
                <gazebo>
                    <mu1>2.0</mu1>
                    <mu2>2.0</mu2>
                </gazebo>
            </link>
        </xacro:macro>

        <!-- ================= 4 WHEELS ================= -->

        <!-- Front Left -->
        <xacro:wheel name="front_left_wheel"  x="0.12"  y="0.10"/>

        <!-- Front Right -->
        <xacro:wheel name="front_right_wheel" x="0.12"  y="-0.10"/>

        <!-- Rear Left -->
        <xacro:wheel name="rear_left_wheel"   x="-0.12" y="0.10"/>

        <!-- Rear Right -->
        <xacro:wheel name="rear_right_wheel"  x="-0.12" y="-0.10"/>

        <!-- ================= LIDAR ================= -->
        <link name="${prefix}lidar_link">
            <visual>
                <geometry>
                    <cylinder radius="0.04" length="0.05" />
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <cylinder radius="0.04" length="0.05" />
                </geometry>
            </collision>
            <inertial>
                <mass value="0.3" />
                <inertia ixx="0.0005" iyy="0.0005" izz="0.0005"
                    ixy="0" ixz="0" iyz="0" />
            </inertial>
        </link>

        <joint name="${prefix}lidar_joint" type="fixed">
            <parent link="${prefix}base_link" />
            <child link="${prefix}lidar_link" />
            <origin xyz="0.0 0 0.15" />
        </joint>

        <!-- ================= CAMERA ================= -->
        <link name="${prefix}camera_link">
            <visual>
                <geometry>
                    <box size="0.04 0.04 0.04" />
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <box size="0.04 0.04 0.04" />
                </geometry>
            </collision>
            <inertial>
                <mass value="0.1" />
                <inertia ixx="0.0001" iyy="0.0001" izz="0.0001"
                    ixy="0" ixz="0" iyz="0" />
            </inertial>
        </link>

        <joint name="${prefix}camera_joint" type="fixed">
            <parent link="${prefix}base_link" />
            <child link="${prefix}camera_link" />
            <origin xyz="0.15 0 0.15" />
        </joint>

    </xacro:macro>
</robot>
